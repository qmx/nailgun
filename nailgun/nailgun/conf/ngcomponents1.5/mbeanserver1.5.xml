<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-2.5.xsd ">

	<bean id="MBeanServer"
		class="javax.management.MBeanServerFactory" lazy-init="false" factory-method="createMBeanServer">
		<constructor-arg type="java.lang.String" value="ngserver" />
	</bean>
	
	<bean id="MBeanServerJMXUrl"
		class="javax.management.remote.JMXServiceURL" lazy-init="false">
		<constructor-arg type="java.lang.String" value="service:jmx:rmi://localhost/jndi/rmi://localhost:4546/jmxrmi" />
	</bean>
	
	<!-- 
		service:jmx:rmi:///jndi/rmi://10.19.47.48:7004/jmxrmi
		service:jmx:rmi:///jndi/rmi://localhost:4545/jmxrmi
		service:jmx:rmi://localhost/jndi/rmi://localhost:4545/jmxrmi
	 -->

	
 
	<bean id="RMIRegistry"
		class="java.rmi.registry.LocateRegistry" 
			lazy-init="false" 
			factory-method="createRegistry">
		<constructor-arg value="4546" />
	</bean>

	
	<bean id="EchoArgsBean"
		class="com.martiansoftware.nailgun.components.examples.EchoArgsBean"/> 
	
	<bean id="NGCache" class="com.martiansoftware.nailgun.components.builtins.cache.CacheService">
		<constructor-arg value="true" />
		<constructor-arg value="true" />
		<property name="server" ref="MBeanServer"/>
	</bean>
	
	
	<bean id="Printer" class="com.martiansoftware.nailgun.components.builtins.jmx.JMXServerConnectionPrinter">
		<constructor-arg ref="MBeanServerConnector" />
	</bean>

	<bean id="MBeanServerConnector"
		class="javax.management.remote.JMXConnectorServerFactory" 
			lazy-init="false" 
			init-method="start"
			factory-method="newJMXConnectorServer"
			depends-on="RMIRegistry">
		<constructor-arg ref="MBeanServerJMXUrl" />
		<constructor-arg>
			<map/>
			<!-- 
			<map>
				<entry>
            		<key>
                		<value>java.naming.factory.initial</value>
            		</key>
            		<value>com.sun.jndi.rmi.registry.RegistryContextFactory</value>
        		</entry>			
			</map>
			 -->
		</constructor-arg>
		<constructor-arg ref="MBeanServer" />
	</bean>


