<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
           

	<bean id="NGReference" class="com.martiansoftware.nailgun.components.NGReference"/>           
	
	<bean id="EchoArgsBean"
		class="com.martiansoftware.nailgun.components.examples.EchoArgsBean"/> 
	
	<bean id="NGCache" class="com.martiansoftware.nailgun.components.builtins.cache.CacheService">
		<constructor-arg value="false" />  <!--  Soft Cache -->
		<constructor-arg value="false" />  <!--  Active Expiry -->
		<property name="server" ref="MBeanServer"/>
	</bean>
	
	<bean id="Groovy" class="com.martiansoftware.nailgun.components.builtins.groovy.GroovyService">
		<constructor-arg ref="NGCache" />
		<property name="server" ref="MBeanServer"/>
	</bean>
	
	<bean id="OSCommand" class="com.martiansoftware.nailgun.components.builtins.os.OSCommandService">
	</bean>
	
	
	<bean id="JDBC" class="com.martiansoftware.nailgun.components.builtins.jdbc.JDBCService">
	</bean>
	
	<bean id="Oracle"
		class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close"
		p:url="jdbc:oracle:thin:@DBSERVER:1521:ORCL"
		p:driverClassName="oracle.jdbc.driver.OracleDriver"
		p:username="scott"
		p:password="tiger"
		p:initial-size="2"
		p:max-active="5"
		p:pool-prepared-statements="true"
		p:validation-query="SELECT SYSDATE FROM DUAL"
		p:test-on-borrow="false"
		p:test-while-idle="false"/>
		
		<bean id="Transformer" class="com.martiansoftware.nailgun.components.builtins.jdbc.ResultSetDOM"/>
		
	
	
</beans>	